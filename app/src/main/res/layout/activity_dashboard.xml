<?xml version="1.0" encoding="utf-8"?>
<LinearLayout tools:context=".Dashboard"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="300dp"
        android:background="#f6f3f3"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/userdisplay"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#44e9d6"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="#98120b"/>
    <TextView
        android:id="@+id/userdisplay2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f1e954"
        android:textSize="30dp"
        android:text="Department : Computer"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="#98120b"/>
    <TextView
        android:id="@+id/userdisplay3"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f1e954"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textColor="#98120b"/>

    <TextView
        android:id="@+id/userdisplay4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#f1e954"
        android:text="Fees : "
        android:textAlignment="center"
        android:textColor="#98120b"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="check"
        android:text="Check Fee Status" />
    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay now"
        android:onClick="paynow"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Log out"
        android:onClick="logout"/>


</LinearLayout>